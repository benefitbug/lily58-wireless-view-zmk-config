#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |

            label = "Base";
            bindings = <
&kp ESC           &kp N1  &kp N2  &kp N3        &kp N4        &kp N5                                         &kp N6         &kp N7      &kp N8     &kp N9   &kp N0    &kp MINUS
&kp TAB           &kp Q   &kp W   &kp E         &kp R         &kp T                                          &kp Y          &kp U       &kp I      &kp O    &kp P     &kp SQT
&kp LEFT_BRACKET  &kp A   &kp S   &kp D         &kp F         &kp G                                          &kp H          &kp J       &kp K      &kp L    &kp SEMI  &kp RIGHT_BRACKET
&kp LEFT_CONTROL  &kp Z   &kp X   &kp C         &kp V         &kp B      &kp ENTER     &kp B                 &kp N          &kp M       &kp COMMA  &kp DOT  &kp FSLH  &kp EQUAL
                                  &kp LEFT_WIN  &kp LEFT_ALT  &kp SPACE  &lt 1 RALT    &mt LEFT_SHIFT ENTER  &kp BACKSPACE  &kp DELETE  &to 1
            >;
        };

        layer_1 {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |        |  |       |      |  _    |  +    |  {   |   }   |  "|"  |
            //                     |      |      |      |        |  |       |      |       |       |

            bindings = <
&kp GRAVE  &kp N6  &kp N7  &kp N8           &kp N9       &kp N0                     &trans  &trans       &trans    &trans         &trans  &trans
&trans     &trans  &trans  &kp LC(LS(TAB))  &kp LS(TAB)  &trans                     &trans  &kp PAGE_UP  &kp UP    &kp PAGE_DOWN  &trans  &trans
&kp F1     &kp F2  &kp F3  &kp F4           &kp F5       &kp F6                     &trans  &kp LEFT     &kp DOWN  &kp RIGHT      &trans  &trans
&kp F7     &kp F8  &kp F9  &kp F10          &kp F11      &kp F12  &trans    &trans  &trans  &trans       &trans    &trans         &trans  &trans
                           &trans           &trans       &trans   &trans    &trans  &trans  &trans       &to 2
            >;
        };

        layer_2 {
            bindings = <
&kp MINUS  &kp N6  &kp N7           &kp N8  &kp N9         &kp N0                    &trans  &trans  &trans  &trans  &trans  &trans
&trans     &trans  &kp PAGE_UP      &trans  &kp PAGE_DOWN  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans     &trans  &kp LC(LS(TAB))  &trans  &kp LC(TAB)    &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans     &trans  &trans           &trans  &trans         &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
                                    &trans  &trans         &trans  &trans    &trans  &trans  &trans  &to 3
            >;
        };

        layer_3 {
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans                          &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans                          &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans        &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
                                        &trans        &trans        &trans        &trans    &trans  &trans  &trans  &to 4
            >;
        };

        layer_4 {
            bindings = <
&kp ESC           &kp N1  &kp N2  &kp N3    &kp N4    &kp N5                                              &kp N6    &kp N7          &kp N8        &kp N9           &kp N0    &kp MINUS
&kp TAB           &kp Q   &kp W   &kp E     &kp R     &kp T                                               &kp Y     &kp U           &kp UP_ARROW  &kp O            &kp P     &kp APOS
&kp LEFT_BRACKET  &kp A   &kp S   &kp D     &kp F     &kp G                                               &kp H     &kp LEFT_ARROW  &kp DOWN      &kp RIGHT_ARROW  &kp SEMI  &kp RIGHT_BRACKET
&kp LCTRL         &kp Z   &kp X   &kp C     &kp V     &kp B      &kp ENTER          &kp B                 &kp N     &kp M           &kp COMMA     &kp DOT          &kp FSLH  &kp EQUAL
                                  &kp LGUI  &kp LALT  &kp SPACE  &lt 1 RIGHT_ALT    &mt LEFT_SHIFT ENTER  &kp BSPC  &kp DEL         &to 0
            >;
        };
    };
};
